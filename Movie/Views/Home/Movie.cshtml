@model Cinema
@{
    ViewData["Title"] = "Movie";
}

<h1>Movie details</h1>

@if (ViewBag.errorMessages != null)
{
    <h2 class="text-danger">@ViewBag.errorMessages</h2>
}
else
{
    <div class="container-fluid py-5">
        <div class="row px-xl-5">
            <div class="col-lg-5 pb-5">
                <div id="product-carousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner border">
                        <div class="carousel-item active">
                            <img class="w-100 h-100" src="@Model.Poster" alt="Image">
                        </div>
                        <div class="carousel-item">
                            <img class="w-100 h-100" src="@Model.Poster" alt="Image">
                        </div>
                        <div class="carousel-item">
                            <img class="w-100 h-100" src="@Model.Poster" alt="Image">
                        </div>
                        <div class="carousel-item">
                            <img class="w-100 h-100" src="@Model.Poster" alt="Image">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#product-carousel" data-slide="prev">
                        <i class="fa fa-2x fa-angle-left text-dark"></i>
                    </a>
                    <a class="carousel-control-next" href="#product-carousel" data-slide="next">
                        <i class="fa fa-2x fa-angle-right text-dark"></i>
                    </a>
                </div>
            </div>

            <div class="col-lg-7 pb-5">
                <h3 class="font-weight-semi-bold">@Model.Title</h3>
                <h5 class="font-weight-semi-bold">Year     : @Model.Year</h5>
                <h5 class="font-weight-semi-bold">Rated    : @Model.Rated</h5>
                <h5 class="font-weight-semi-bold">Released : @Model.Released</h5>
                <h5 class="font-weight-semi-bold">Runtime  : @Model.Runtime</h5>
                <h5 class="font-weight-semi-bold">Genre    : @Model.Genre</h5>
                <div class="d-flex pt-2">
                    <p class="text-dark font-weight-medium mb-0 mr-2">Share on:</p>
                    <div class="d-inline-flex">
                        <a class="text-dark px-2" href="">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a class="text-dark px-2" href="">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a class="text-dark px-2" href="">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                        <a class="text-dark px-2" href="">
                            <i class="fab fa-pinterest"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row px-xl-5">
            <div class="col">
                <div class="nav nav-tabs justify-content-center border-secondary mb-4">
                    <a class="nav-item nav-link active" data-toggle="tab" href="#tab-pane-1">Plot</a>
                    <a class="nav-item nav-link" data-toggle="tab" href="#tab-pane-2">Awards</a>
                    <a class="nav-item nav-link" data-toggle="tab" href="#tab-pane-3">Info</a>
                    <a class="nav-item nav-link" data-toggle="tab" href="#tab-pane-4">Ratings</a>
                </div>
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="tab-pane-1">
                        <h4 class="mb-3">Plot</h4>
                        <p>@Model.Plot</p>
                    </div>
                    <div class="tab-pane fade" id="tab-pane-2">
                        <h4 class="mb-3">Awards</h4>
                        <p>@Model.Awards</p>
                    </div>
                    <div class="tab-pane fade" id="tab-pane-3">
                        <h4 class="mb-3">Info</h4>
                        <p>Director : @Model.Director</p>
                        <p>Writer   : @Model.Writer</p>
                        <p>Actors   : @Model.Actors</p>
                        <p>Language : @Model.Language</p>
                        <p>Country  : @Model.Country</p>
                        <p>DVD      : @Model.DVD</p>
                        <p>BoxOffice: @Model.BoxOffice</p>
                        <p>Metascore: @Model.Metascore</p>
                    </div>
                    <div class="tab-pane fade" id="tab-pane-4">
                        <h4 class="mb-3">Ratings</h4>
                        <p>@Model.Ratings[0].Source: <span>@Model.Ratings[1].Value</span></p>
                        <p>@Model.Ratings[1].Source: <span>@Model.Ratings[1].Value</span></p>
                        <p>imdbRating: @Model.imdbRating</p>
                        <p>imdbVotes : @Model.imdbVotes</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}